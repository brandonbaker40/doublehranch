<%= simple_form_for(@user, url: verification_path(@user)) do |f| %>
  <div class="row">
    <div class="col-6">
      <%= f.input :email %>
      <%= f.input :first_name %>
      <%= f.input :nickname %>
    </div>
    <div class="col-6">
      <%= f.input :salutation, collection: User::HONORIFICS, include_blank: false %>
      <%= f.input :last_name %>
      <%= f.input :maiden_name, label: "Maiden name (if different)" %>
    </div>
    <div class="col-6">
      <%= f.input :street_address %>
      <%= f.input :state %>
    </div>
    <div class="col-6">
      <%= f.input :city %>
      <%= f.input :zip_code %>
      <%= f.input :country, priority: ["US"] %>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= f.input :facebook_username %>
      <%= f.input :twitter_handle %>
      <%= f.input :instagram_username %>
    </div>
    <div class="col-6">
      <%= f.input :linkedin_username %>
      <%= f.input :pinterest_name %>
      <%= f.input :tumblr_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <br><br>
      <%= f.button :submit, "Verify Information", class: "btn btn-success" %>
    </div>
  </div>
<% end %>