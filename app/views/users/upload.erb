

<div class="signin">
  <div class="signin-container">
    <div class="signin-container-panelLeft">
      <h1 class="text-center">Upload users</h1>
      <% if flash[:error] %>
        <%# # TODO: needs styling %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>
      <div>
        <%= form_tag users_import_path, multipart: true do %>
          <h4>Import users</h4>
          <div>
            <div>
              <span>
                <span>
                  <i class="fa fa-cloud-upload"></i> Select file&hellip;
                  <%= file_field_tag :file %>
                </span>
              </span>
            </div>
            <span class="help-block">
              Be sure file is in correct format.
            </span>
          </div>
          <div class="col-md-3">
            <span>
              <%= submit_tag "Upload",
                             class: "btn btn-default form-group",
                             style: "margin: 0em",
                             name: nil %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="signin-container-panelRight hidden-sm-down">
      <div class="dialog">
        <h1>SPECIAL NOTE</h1>
        <p>This upload will NOT automatically invite Users via email. We'll need to turn that on for you. It WILL import positions held provided you've formatted them accordingly. Write us in Slack if you have any issues with the importer!</p>
      </div>
      <div class="filter-img">
      </div>
    </div>
  </div>
</div>

