<%= render 'layouts/nav' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <div class="text-center gallery-page-header">
                <h3><%= PositionsHeld.model_name.human.pluralize %></h3>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-body text-center">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th>User</th>
              <th>Position</th>
              <th>Program</th>
              <th class="text-center"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <tbody>
            <% @positions_helds.each do | positions_held | %>
              <tr>
                <td class="text-left"><%= display_name(positions_held.user) %></td>
                <td class="text-left"><%= positions_held.position.name if positions_held.position %></td>
                <td class="text-left"><%= positions_held.program.name if positions_held.program %></td>
                <td align="center">
                  <%= link_to edit_positions_held_path(positions_held) do %>
                    <i class="btn btn-primary"><em class="fa fa-pencil"></em></i>
                  <% end %>

                  <%= link_to positions_held_path(positions_held), method: :delete do %>
                    <i class="btn btn-outline-danger"><em class="fa fa-trash"></em></i>
                  <% end %>

                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <p><%= link_to 'New position held', new_positions_held_path, class: "btn btn-primary" %></p>
</div>
