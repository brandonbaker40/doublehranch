<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <div class="gallery-page-header">
                <h3 class="panel-title">Positions</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-body text-center">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th>Name</th>
                <th>Position type</th>
                <th class="text-center"><em class="fa fa-cog"></em></th>
              </tr>
            </thead>

            <tbody>
              <% @positions.each do |position| %>
                <tr>
                  <td class="text-left"><%= link_to(position.name, edit_position_path(position)) %></td>
                  <td><%= position.position_type %></td>
                  <td align="center">
                    <%= link_to edit_position_path(position) do %>
                      <i class="btn btn-primary"><em class="fa fa-pencil"></em></i>
                    <% end %>

                    <%= link_to position_path(position), method: :delete do %>
                      <i class="btn btn-outline-danger"><em class="fa fa-trash"></em></i>
                    <% end %>

                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Position', new_position_path %>
