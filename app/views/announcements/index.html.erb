<%= render 'layouts/nav' %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <div class="gallery-page-header">
                <h3 class="panel-title">Announcements</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-body text-center">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="text-center">Text</th>
              <th class="text-center">Start Date</th>
              <th class="text-center">End Date</th>
              <th class="text-center">Showing on Terrace?</th>
              <th class="text-center"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <tbody>
            <% @announcements.each do | announcement | %>
              <tr>
                <td><%= announcement.text %></td>
                <td><%= announcement.start_date.strftime("%m/%d/%Y")%></td>
                <td><%= announcement.end_date.strftime("%m/%d/%Y") %></td>
                <td><em class="<%= announcement.active? ? 'fa fa-check' : 'fa fa-close'%>"></em></td>
                <td align="center">
                  <%= link_to edit_announcement_path(announcement) do %>
                    <i class="btn btn-primary"><em class="fa fa-pencil"></em></i>
                  <% end %>

                  <%= link_to announcement_path(announcement), method: :delete do %>
                    <i class="btn btn-outline-danger"><em class="fa fa-trash"></em></i>
                  <% end %>

                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <p><%= link_to 'New Announcement', new_announcement_path, class: "btn btn-primary" %></p>
</div>
