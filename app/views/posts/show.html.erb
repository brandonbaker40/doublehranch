<%= render 'layouts/nav' %>
<div class="post-container">
  <div>
    <h3><%= link_to 'Back to Greenhouse', posts_path %></h3>
  </div>
  <div class="text-center page-header">
    <span class="post-tags">
      <%= link_to 'Hide', hide_post_path(@post), method: :post, class:'btn btn-warning' if current_user.admin? %>
    </span>
  </div>

  <div class="post-navigation">
    <%= link_to 'Previous', post_path(@post.previous) if @post.previous %>
    <%= link_to 'Next', post_path(@post.next) if @post.next %>
  </div>
  <%= image_tag @post.photo.url %>
  <div class="post-caption">
    <%= @post.caption %>
  </div>
  <span class="post-tags">
    Tags: <%= raw(@post.tag_list.map { |t| link_to t, tag_path(t)  }.join(', ')) %>
  </span>
  <div class="post-tag-form">
    <%= render 'tag_form' %>
  </div>
  <div class="delete-post">
    <%= button_to "Delete Post", @post, method: :delete, class: "btn btn-danger" %>
  </div>
  <div class="edit-post">
    <%= button_to "Edit Post", edit_post_path(@post), method: :get, class: "btn btn-warning" %>
  </div>
  <div class="post-comments">
    <%= render @post.comments %>
    <div class="post-comments-form">
      <%= render 'comment_form' %>
    </div>
  </div>
</div>
