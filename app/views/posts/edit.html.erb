<%= render 'layouts/nav' %>
<div class="upload-container">
  <div class="gallery-page-header">
    <h3>Edit your Post Caption</h3>
  </div>
  <br />
  <%= form_tag post_path(@post), method: "put" do %>
    <%= text_area_tag :caption, @post.caption %><br>
    <%= submit_tag "Submit Edits" %>
  <% end %>
</div>
