<% announcements_present = @announcements.any? %>

<div class="gallery-announcements <%= "active" if announcements_present %>">
  <h3><%= link_to("Announcements", announcements_path) %></h3>
  <% if announcements_present %>
    <ul class="gallery-announcements-list list-group">
      <% @announcements.each do |announcement| %>
        <li class="gallery-announcements-item list-group-item">
          <% if current_user.admin? %>
            <%= link_to announcement.text, edit_announcement_path(announcement) %>
          <% else %>
            <% announcement.text %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    No announcements
  <% end %>
</div>